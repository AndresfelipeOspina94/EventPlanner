@page
@model EventPlanner.Pages.Participantes.CreateModel
@{
    ViewData["Title"] = "Crear Nuevo Participante";
}

<h1>Crear Nuevo Participante</h1>

<h4>Participante</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Participante.Nombre" class="control-label"></label>
                <input asp-for="Participante.Nombre" class="form-control" />
                <span asp-validation-for="Participante.Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participante.Apellido" class="control-label"></label>
                <input asp-for="Participante.Apellido" class="form-control" />
                <span asp-validation-for="Participante.Apellido" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participante.Email" class="control-label"></label>
                <input asp-for="Participante.Email" class="form-control" />
                <span asp-validation-for="Participante.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Participante.Telefono" class="control-label"></label>
                <input asp-for="Participante.Telefono" class="form-control" />
                <span asp-validation-for="Participante.Telefono" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" />
                <a asp-page="Index" class="btn btn-primary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
