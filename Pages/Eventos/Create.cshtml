@page
@model EventPlanner.Pages.Eventos.CreateModel

@{
    ViewData["Title"] = "Crear Evento";
}

<h1>Crear Evento</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Evento.NombreEvento" class="control-label"></label>
                <input asp-for="Evento.NombreEvento" class="form-control" />
                <span asp-validation-for="Evento.NombreEvento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evento.Descripcion" class="control-label"></label>
                <input asp-for="Evento.Descripcion" class="form-control" />
                <span asp-validation-for="Evento.Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evento.FechaInicio" class="control-label"></label>
                <input asp-for="Evento.FechaInicio" class="form-control" />
                <span asp-validation-for="Evento.FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evento.FechaFin" class="control-label"></label>
                <input asp-for="Evento.FechaFin" class="form-control" />
                <span asp-validation-for="Evento.FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Evento.IdUbicacion" class="control-label"></label>
                <input asp-for="Evento.IdUbicacion" class="form-control" />
                <span asp-validation-for="Evento.IdUbicacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Volver al índice</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}