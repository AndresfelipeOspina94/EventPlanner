@page
@model EventPlanner.Pages.Eventos.IndexModel
@{
    ViewData["Title"] = "Index Eventos";
}

<h1>Index Eventos</h1>
<p>
    <a asp-page="Create" class="btn btn-success">Crear Nuevo Evento</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre del Evento</th>
            <th>Descripción</th>
            <th>Fecha de Inicio</th>
            <th>Fecha de Fin</th>
            <th>Nombre de la Ubicación</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Eventos)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.NombreEvento)</td>
                <td>@Html.DisplayFor(modelItem => item.Descripcion)</td>
                <td>@item.FechaInicio.ToString("d")</td>
                <td>@item.FechaFin.ToString("d")</td>
                <td>@Html.DisplayFor(modelItem => item.Ubicacion.NombreUbicacion)</td>
                <td>
                    <div class="btn-group" role="group">
                        <a asp-page="./Edit" asp-route-id="@item.IdEvento" class="btn btn-warning">Editar</a>
                        <a asp-page="./Delete" asp-route-id="@item.IdEvento" class="btn btn-danger ms-2">Eliminar</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
