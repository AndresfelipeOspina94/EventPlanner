@page
@model EventPlanner.Pages.Ubicaciones.CreateModel
@{
    ViewData["Title"] = "Crear Nueva Ubicación";
}

<h1>Crear Nueva Ubicación</h1>

<h4>Ubicación</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Ubicacion.NombreUbicacion" class="control-label"></label>
                <input asp-for="Ubicacion.NombreUbicacion" class="form-control" />
                <span asp-validation-for="Ubicacion.NombreUbicacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ubicacion.Capacidad" class="control-label"></label>
                <input asp-for="Ubicacion.Capacidad" class="form-control" />
                <span asp-validation-for="Ubicacion.Capacidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ubicacion.Direccion" class="control-label"></label>
                <input asp-for="Ubicacion.Direccion" class="form-control" />
                <span asp-validation-for="Ubicacion.Direccion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-success" />
                <a asp-page="Index" class="btn btn-primary">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
